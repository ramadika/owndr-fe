{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".", // Required for path aliases to work
    "paths": {
      "@/*": ["src/*"] // Define the alias
    }
  },
  "include": ["src"], // Include the source folder
  "exclude": ["node_modules"]
}